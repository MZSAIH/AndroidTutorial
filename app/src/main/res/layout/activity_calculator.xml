<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">

    <Button
        android:id="@+id/zero"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uno" />

    <Button
        android:id="@+id/uguale"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/punto"
        app:layout_constraintTop_toBottomOf="@+id/tre"
        tools:visibility="visible" />

    <Button
        android:id="@+id/piu"
        android:onClick="buttonClick"
        android:layout_width="70dp"
        android:layout_height="145dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/tre"
        app:layout_constraintTop_toBottomOf="@+id/meno"
        tools:visibility="visible" />

    <Button
        android:id="@+id/punto"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="."
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/due" />

    <Button
        android:id="@+id/uno"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quatro" />

    <Button
        android:id="@+id/tre"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/due"
        app:layout_constraintTop_toBottomOf="@+id/sei" />

    <Button
        android:id="@+id/due"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/uno"
        app:layout_constraintTop_toBottomOf="@+id/cinque" />

    <Button
        android:id="@+id/quatro"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sette" />

    <Button
        android:id="@+id/meno"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/sei"
        app:layout_constraintTop_toBottomOf="@+id/per"
        tools:visibility="visible" />

    <Button
        android:id="@+id/sei"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/cinque"
        app:layout_constraintTop_toBottomOf="@+id/nove" />

    <Button
        android:id="@+id/cinque"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/quatro"
        app:layout_constraintTop_toBottomOf="@+id/otto" />

    <Button
        android:id="@+id/sette"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/per2" />

    <Button
        android:id="@+id/otto"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/sette"
        app:layout_constraintTop_toBottomOf="@+id/per100" />

    <Button
        android:id="@+id/per"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="x"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/nove"
        app:layout_constraintTop_toBottomOf="@+id/diviso"
        tools:visibility="visible" />

    <Button
        android:id="@+id/nove"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/otto"
        app:layout_constraintTop_toBottomOf="@+id/piuomeno" />

    <Button
        android:id="@+id/per2"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="16dp"
        android:text="√"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onoff"
        tools:visibility="visible" />

    <Button
        android:id="@+id/per100"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:text="%"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/per2"
        app:layout_constraintTop_toBottomOf="@+id/onoff"
        tools:visibility="visible" />

    <Button
        android:id="@+id/piuomeno"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:text="+/-"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/per100"
        app:layout_constraintTop_toBottomOf="@+id/onoff"
        tools:visibility="visible" />

    <Button
        android:id="@+id/diviso"
        android:onClick="buttonClick"
        android:layout_width="66dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:text="÷"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/piuomeno"
        app:layout_constraintTop_toBottomOf="@+id/onoff"
        tools:visibility="visible" />

    <Button
        android:id="@+id/onoff"
        android:onClick="buttonClick"
        android:layout_width="127dp"
        android:layout_height="77dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="32dp"
        android:text="on/off"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/risultato" />

    <EditText
        android:id="@+id/risultato"
        android:onClick="buttonClick"
        android:layout_width="297dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="On"
        android:inputType="number"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>